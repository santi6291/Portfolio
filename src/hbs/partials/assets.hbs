{{#if meta_data}}
<meta name="description" content="{{body.intro}}">
<meta name="subject" content="Web developer">
<meta name="url" content="http://{{host_name}}/">
{{/if}}

{{#if facebook}}
<meta property="og:url" content="http://{{host_name}}/">
<meta property="og:type" content="website">
<meta property="og:title" content="{{site_name}}">
<meta property="og:image" content="http://{{host_name}}{{headshot.image}}">
<meta property="og:description" content="{{body.intro}}">
<meta property="og:site_name" content="{{site_name}}">
<meta property="og:locale" content="en_US">
{{/if}}

{{#if twitter}}
<meta name="twitter:card" content="summary">
<meta name="twitter:creator" content="@santi6291">
<meta name="twitter:url" content="http://{{host_name}}/">
<meta name="twitter:title" content="{{site_name}}">
<meta name="twitter:description" content="{{body.intro}}">
<meta name="twitter:image" content="http://{{host_name}}{{headshot.image}}">
{{/if}}