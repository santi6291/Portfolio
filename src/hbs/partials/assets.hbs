{{#if styles}}
	<link rel="stylesheet" href="/css/small.css">
	<script>
	(function(w,d) {
		var h = document.querySelector('head')
		var s = d.createElement('link');
		s.rel = 'stylesheet';
		s.href = location.href + 'css/app.css';
		h.appendChild(s);
	})(window,document);
	</script>
{{/if}}

{{#if ga}}
	{{#if isProd}}
	<!-- Google Analytics -->
	<script>
		window.ga=window.ga||function(){(ga.q=ga.q||[]).push(arguments)};ga.l=+new Date;
		ga('create', 'UA-45794014-2', 'auto');
		ga('send', 'pageview');
	</script>
	<script async src='https://www.google-analytics.com/analytics.js'></script>
	<!-- End Google Analytics -->
	{{/if}}
{{/if}}

{{#if meta_data}}
<meta name="description" content="{{description}}">
<meta name="subject" content="Web developer">
<meta name="url" content="http://{{host_name}}/">
{{/if}}

{{#if facebook}}
<meta property="og:url" content="http://{{host_name}}/">
<meta property="og:type" content="website">
<meta property="og:title" content="{{site_name}}">
<meta property="og:image" content="http://{{host_name}}{{headshot.image}}">
<meta property="og:description" content="{{description}}">
<meta property="og:site_name" content="{{site_name}}">
<meta property="og:locale" content="en_US">
{{/if}}

{{#if twitter}}
<meta name="twitter:card" content="summary">
<meta name="twitter:creator" content="@santi6291">
<meta name="twitter:url" content="http://{{host_name}}/">
<meta name="twitter:title" content="{{site_name}}">
<meta name="twitter:description" content="{{description}}">
<meta name="twitter:image" content="http://{{host_name}}{{headshot.image}}">
{{/if}}